<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="220dp"
    android:background="@drawable/dialog_bg"

    >

    <TextView
        android:id="@+id/nameD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:textSize="18dp"
        android:text="NAME"/>

    <TextView
        android:id="@+id/occupationD" android:textColor="#fff"
        android:layout_margin="5dp"
        android:layout_below="@+id/nameD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Occupation"/>

    <TextView
        android:id="@+id/deptD" android:textColor="#fff"
        android:layout_margin="5dp"
        android:layout_below="@+id/occupationD"
        android:text="Department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/phone_numberD" android:textColor="#fff"
        android:layout_below="@+id/deptD"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:text="Number"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/emailD" android:textColor="#fff"
        android:layout_margin="5dp"
        android:text="email"
        android:layout_below="@+id/phone_numberD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/callD"
        android:elevation="5dp"
        android:background="@drawable/callbtn_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="কল"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/msgbtn_bg"

        android:text="ম্যাসেজ"
        android:id="@+id/messageD"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button


        android:background="@drawable/emailbtn_bg"
        android:text="ইমেইল"
        android:id="@+id/mailD"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>