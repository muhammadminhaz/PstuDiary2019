<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/agri"
            android:onClick="AgriList"
            app:cardElevation="16dp"
            app:cardCornerRadius="5dp"
            android:layout_width="160dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="130dp"
            android:clickable="true"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"

                    android:layout_marginTop="3.4dp"
                    android:layout_height="64dp"
                    android:padding="1dp"
                    android:src="@drawable/agriculture"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="কৃষি"
                    android:layout_marginBottom="19dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/fisheries"

            android:onClick="CseList"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="16dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView

                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="1dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/cse"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="কম্পিউটার সায়েন্স এন্ড ইঞ্জিনিয়ারিং"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/bam"
            android:layout_width="160dp"
            android:layout_height="130dp"
            app:cardElevation="16dp"
            android:onClick="BamList"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="1dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/bam"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:text="ব্যবসায় প্রশাসন ও ব্যবস্থাপনা"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/veterinary"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:clickable="true"
            app:cardElevation="16dp"
            app:cardCornerRadius="5dp"
            android:onClick="VeteList"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="1dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/veterinary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="এ্যানিমেল সায়েন্স এন্ড ভেটেরিনারি মেডিসিন"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/cse"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:clickable="true"
            android:onClick="FishList"
            app:cardElevation="16dp"
            app:cardCornerRadius="5dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="1dp"
                    android:src="@drawable/fisheries"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মাৎস্যবিজ্ঞান"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dm"
            android:layout_width="160dp"
            android:layout_height="130dp"
            app:cardElevation="16dp"
            android:onClick="DmList"
            app:cardCornerRadius="5dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:padding="1dp"
                    android:src="@drawable/disastermanagementicon"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="দুর্যোগ ব্যবস্থাপনা"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/food"
            android:layout_width="160dp"
            android:layout_height="130dp"
            app:cardElevation="16dp"
            android:onClick="FoodList"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="3dp"
                    android:padding="1dp"
                    android:src="@drawable/foodandnutritions"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"
                    android:text="নিউট্রিশন এন্ড ফুড     সায়েন্স"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/land"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:clickable="true"
            android:onClick="LandList"
            app:cardElevation="16dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="3dp"
                    android:padding="1dp"
                    android:src="@drawable/landmanagement"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#102167"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ল্যান্ড ম্যানেজমেন্ট এন্ড এডমিনিস্ট্রেশন"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"/>





            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>







</LinearLayout>
</android.support.v4.widget.NestedScrollView>